	@Override
	public final void draw(Graphics g)
	{
		if (!hidden && isActive())
		{
			if (isLightAffected())
			{
				ShaderHandler.applyLights(0);
			}
			else
			{
				ShaderHandler.disableLighting();
			}

			if (hasTextures && shouldDrawTextures())
			{
				if (renderImage)
				{
					if (level.areDimensionOffset() && level.getType() == LevelType.NORMAL && level.getForegroundDimension() == this.dimension && !this.shared)
					{
						drawTextured(dimension.getOpposite(), g);
					}

					drawTextured(dimension, g);

					if (level.areDimensionOffset() && level.getType() == LevelType.NORMAL && level.getForegroundDimension() == this.dimension.getOpposite() && !this.shared)
					{
						drawTextured(dimension.getOpposite(), g);
					}
				}
			}
			else if (shouldDrawAsGreyBlock())
			{
				if (!GameLauncher.getContainer().getInput().isKeyDown(Input.KEY_LALT))
				{
					ShaderHandler.setGrayScaleFactor(this.dimension == Dimension.LIGHT ? 0.0f : level.getDimensionFactor(Dimension.SHADOW));

					ColorHelper.applyAlphaAndCopy(FILL_COLOR, level.getControlAlpha(), g);
					g.fill(this.hitbox);

					Renderer.clearBind();
				}
			}

			customDraw(g);
		}
	}

	private void drawTextured(Dimension dimension, Graphics g)
	{
		Color color = getDrawColor(level.getType() == LevelType.NORMAL ? level.getForegroundDimension() : dimension, colorBuffer);

		boolean identicalTwin = level.getType() == LevelType.NORMAL || this.hasMirror() && this.getMirror().getPosition().equals(this.position) && this.getMirror().getRotation() == this.rotation && this.innerType == ((TerrainObject) this.getMirror()).getInnerType();

		if (identicalTwin && this.dimension == Dimension.SHADOW && !level.areDimensionOffset())
		{
			return; // avoid duplicate drawing
		}

		ShaderHandler.setGrayScaleFactor(identicalTwin && !level.areDimensionOffset() ? level.getDimensionFactor(Dimension.SHADOW) : (dimension == Dimension.LIGHT ? 0.0f : 1.0f));

		if (identicalTwin)
		{
			color.a = 1.0f;
		}

		if (level.isFading() && this.isChangeable())
		{
			color.a *= level.getFadingAlpha();
		}

		color = customModifiyDrawColor(color);

		preDraw(color, g);

		if (shared)
		{
			level.drawAsShared((IShareable<?>) this, g);
		}
		else
		{
			if (reSimulationCooldown > 0 || LevelManager.isCheckpointing() && isMoveable() || level.getLevelType() == LevelType.FROZEN && isTimeEffected() && isMoveable() && ((dimension == level.getForegroundDimension() || dimension == level.getBackgroundDimension() && level.isTransitioning()) && level.getControllingPlayer() != null && level.getControllingPlayer().isRawTimeEffected()))
			{
				int trailImages = (int) (level.getType() == LevelType.FROZEN ? 16 : (reSimulationCooldown > 0 ? ((float) reSimulationCooldown) / ((float) DEFAULT_RE_SIMULATION_COOLDOWN) * 24 : 16 * LevelManager.getCheckpointingFactor()));

				if (level.getType() == LevelType.FROZEN && level.isTransitioning())
				{
					trailImages *= dimension == level.getBackgroundDimension() ? LevelManager.getTransitionFactor() : (1.0f - LevelManager.getTransitionFactor());
				}

				drawTrailImage(image, trailImages, 15, dimension, ColorHelper.copy(color, ColorHelper.buffer), 0.4f, g);
			}

			drawImage(this.image, dimension, color, g);
		}
	}

	protected void customDraw(Graphics g)
	{

	}

	public final void drawBlurryImage(RealImage image, Dimension dimension, Color color, Graphics g)
	{
		drawImage(image, dimension, color, g);
	}

	public final void drawImage(RealImage image, Dimension dimension, Color color, Graphics g)
	{
		drawImage(image, dimension, this.rotation, this.position.x, this.position.y, color, g);
	}

	public void drawImage(RealImage image, Dimension dimension, float rotation, float x, float y, Color color, Graphics g)
	{
		if (image == null)
		{
			return;
		}

		image.setCenterOfRotation(getCenterOfRotationX() - position.x, getCenterOfRotationY() - position.y);
		image.setRotation(rotation);

		x += level.getXOffset(dimension);
		y += level.getYOffset(dimension);

		if (shouldDrawCustomImage())
		{
			drawCustomImage(image, x, y, color, g);
		}
		else
		{
			if (resized)
			{
				if (properties.shouldScaleImage())
				{
					image.draw(x, y, this.hitbox.getRawWidth(), this.hitbox.getRawHeight(), color);
				}
				else
				{
					RealImage.fillArea(image, x, y, this.hitbox.getRawWidth(), this.hitbox.getRawHeight(), getCenterOfRotationX(), getCenterOfRotationY(), color, true, g);
				}
			}
			else
			{
				if (renderPartially())
				{
					g.drawImage(image, x + relRenderStartOffset, y, x + image.getWidth() - relRenderEndOffset, y + image.getHeight(), relRenderStartOffset, 0, image.getWidth() - relRenderEndOffset, image.getHeight(), color);
				}
				else
				{
					image.draw(x, y, color);
				}
			}
		}
	}

	protected Color getFinalDrawColor()
	{
		return ColorHelper.multiplyAndCopy(this.customModifiyDrawColor(ColorHelper.applyAlphaAndCopy(getDrawColor(this.dimension, ColorHelper.buffer), level.getDimensionColor(this.dimension).a)), this.shared ? level.getFinalSharedColor() : Color.white);
	}

